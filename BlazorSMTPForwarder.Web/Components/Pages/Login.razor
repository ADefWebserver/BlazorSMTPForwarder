@page "/login"
@using BlazorSMTPForwarder.Web.Services
@using BlazorSMTPForwarder.Web.Components.Layout
@inject LoginService LoginService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@layout LoginLayout

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm" style="width: 400px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Login</h3>
            @if (!string.IsNullOrEmpty(Error))
            {
                <div class="alert alert-danger">@Error</div>
            }
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" @bind="Password" @onkeyup="HandleKeyUp" />
            </div>
            <button class="btn btn-primary w-100" @onclick="DoLogin">Login</button>
        </div>
    </div>
</div>

@code {
    string Password = "";
    string? Error;

    protected override void OnInitialized()
    {
        // If already logged in (or no password required), redirect to home
        if (!LoginService.CheckIfPasswordIsSet() || LoginService.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    void DoLogin()
    {
        if (LoginService.Login(Password))
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            Error = "Invalid password";
        }
    }

    void HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            DoLogin();
        }
    }
}
